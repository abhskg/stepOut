<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProfilePic">

    <!--Part above add image region-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Genenrates the back and skip buttons-->
        <LinearLayout
            android:id="@+id/signUp_top_linear"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <ImageButton
                android:id="@+id/signUp_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Back button"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"/>

            <TextView
                android:id="@+id/signUp_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/skip_text"
                android:textColor="#1B1C20"
                android:alpha="0.5"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_profile_pic_text"/>

        <!--White line in between two text views -->
        <View
            android:layout_width="44dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_profile_pic_support_text"/>

    </LinearLayout>

    <!--Add image button : region -->



    <!--Bottom portion for status of sign up and next button -->


</RelativeLayout>