<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@color/login_signup_bg">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        >

        <ImageView
            android:id="@+id/logo_step_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />

        <TextView
            android:id="@+id/title_step_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/Segoe UI Semibold"
            android:text="@string/stepout_title"
            android:textSize="30sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="188dp"
        android:layout_height="75dp"
        android:text="@string/create_new_account"
        android:textSize="30sp"
        android:fontFamily="@font/Segoe UI Semibold"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="60dp"
        android:lineHeight="35dp"
        android:textColor="@color/white"
        />

    <View
        android:layout_width="35dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="For the best experience with StepOut"
        android:textSize="18sp"
        android:fontFamily="@font/Segoe UI Semibold"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="60dp"
        android:lineHeight="25dp"
        android:textColor="@color/white"
        />

</RelativeLayout>